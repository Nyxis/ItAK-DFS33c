{% extends 'base.html.twig' %}

{% block title %}Accueil - Biblios{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5">
        <h1 class="display-4 mb-3">
            <i class="fas fa-book-open text-primary"></i> 
            Bienvenue {{ app.user.firstname }} !
        </h1>
        <p class="lead text-muted">
            Découvrez notre catalogue de livres et explorez notre collection
        </p>
    </div>

    <!-- Actions rapides -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-search fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Parcourir le catalogue</h5>
                    <p class="card-text">Explorez notre collection de livres et découvrez de nouvelles lectures</p>
                    <a href="{{ path('app_book_index') }}" class="btn btn-primary">
                        <i class="fas fa-book"></i> Voir le catalogue
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Mon profil</h5>
                    <p class="card-text">Gérez vos informations personnelles et vos préférences</p>
                    <button class="btn btn-success" disabled>
                        <i class="fas fa-cog"></i> Bientôt disponible
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Informations sur la bibliothèque -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-info"></i> 
                        À propos de Biblios
                    </h5>
                    <p class="card-text">
                        Biblios est la médiathèque numérique de Trifouillis-les-Oies. 
                        Notre mission est de vous donner accès à une vaste collection de livres 
                        et de ressources pour enrichir vos connaissances et nourrir votre passion pour la lecture.
                    </p>
                    <div class="row text-center mt-4">
                        <div class="col-md-4">
                            <h3 class="text-primary">{{ books_count ?? '...' }}</h3>
                            <p class="text-muted">Livres disponibles</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-success">{{ authors_count ?? '...' }}</h3>
                            <p class="text-muted">Auteurs référencés</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-warning">{{ editors_count ?? '...' }}</h3>
                            <p class="text-muted">Maisons d'édition</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 
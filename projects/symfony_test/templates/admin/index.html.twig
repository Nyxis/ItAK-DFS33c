{% extends 'base.html.twig' %}

{% block title %}Administration - Biblios{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-cogs"></i> Administration
            </h1>
            <p class="lead text-muted mb-5">Gérez le contenu de votre bibliothèque</p>
        </div>
    </div>

    <div class="row">
        <!-- Gestion des Livres -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-book fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Livres</h5>
                    <p class="card-text">Gérez le catalogue des livres</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_book_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> Voir tous les livres
                        </a>
                        <a href="{{ path('admin_book_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Ajouter un livre
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gestion des Auteurs -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-edit fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Auteurs</h5>
                    <p class="card-text">Gérez les auteurs</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_author_index') }}" class="btn btn-outline-success">
                            <i class="fas fa-list"></i> Voir tous les auteurs
                        </a>
                        <a href="{{ path('admin_author_new') }}" class="btn btn-success">
                            <i class="fas fa-plus"></i> Ajouter un auteur
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gestion des Éditeurs -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-building fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Éditeurs</h5>
                    <p class="card-text">Gérez les maisons d'édition</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_editor_index') }}" class="btn btn-outline-warning">
                            <i class="fas fa-list"></i> Voir tous les éditeurs
                        </a>
                        <a href="{{ path('admin_editor_new') }}" class="btn btn-warning">
                            <i class="fas fa-plus"></i> Ajouter un éditeur
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Aperçu rapide</h3>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h2 class="card-title">{{ books_count ?? 0 }}</h2>
                    <p class="card-text">Livres</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h2 class="card-title">{{ authors_count ?? 0 }}</h2>
                    <p class="card-text">Auteurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h2 class="card-title">{{ editors_count ?? 0 }}</h2>
                    <p class="card-text">Éditeurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h2 class="card-title">{{ comments_count ?? 0 }}</h2>
                    <p class="card-text">Commentaires</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 
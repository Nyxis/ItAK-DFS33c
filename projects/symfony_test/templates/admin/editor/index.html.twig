{% extends 'base.html.twig' %}

{% block title %}Liste des éditeurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des éditeurs</h1>
            <a href="{{ path('admin_editor_new') }}" class="btn btn-primary">Ajouter un éditeur</a>
        </div>

        {% if editors|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Nombre de livres publiés</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for editor in editors %}
                            <tr>
                                <td>{{ editor.id }}</td>
                                <td>{{ editor.name }}</td>
                                <td>{{ editor.books|length }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun éditeur trouvé. <a href="{{ path('admin_editor_new') }}">Ajoutez le premier éditeur</a> !
            </div>
        {% endif %}
    </div>
{% endblock %} 
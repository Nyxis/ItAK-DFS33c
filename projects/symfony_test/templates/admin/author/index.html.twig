{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des auteurs</h1>
            <a href="{{ path('admin_author_new') }}" class="btn btn-primary">Ajouter un auteur</a>
        </div>

        {% if authors|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Date de naissance</th>
                            <th>Date de décès</th>
                            <th>Nationalité</th>
                            <th>Nombre de livres</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for author in authors %}
                            <tr>
                                <td>{{ author.id }}</td>
                                <td>{{ author.name }}</td>
                                <td>{{ author.dateOfBirth ? author.dateOfBirth|date('d/m/Y') : '-' }}</td>
                                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('d/m/Y') : '-' }}</td>
                                <td>{{ author.nationality ?? '-' }}</td>
                                <td>{{ author.books|length }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun auteur trouvé. <a href="{{ path('admin_author_new') }}">Ajoutez le premier auteur</a> !
            </div>
        {% endif %}
    </div>
{% endblock %} 
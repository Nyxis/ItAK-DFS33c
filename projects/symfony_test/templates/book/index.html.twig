{% extends 'base.html.twig' %}

{% block title %}Biblios - Catalogue{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Catalogue des livres</h1>
        
        {% if books|length > 0 %}
            <div class="row">
                {% for book in books %}
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100">
                            {% set coverUrl = book.cover %}
                            {% if not coverUrl or coverUrl == '' %}
                                {% set coverUrl = asset('images/books/Harry-potter-1.jpg') %}
                            {% endif %}
                            
                            <img src="{{ coverUrl }}" 
                                 class="card-img-top" 
                                 alt="{{ book.title }}" 
                                 style="height: 300px; object-fit: cover; background-color: #f8f9fa;"
                                 onerror="this.src='{{ asset('images/books/Harry-potter-1.jpg') }}';">
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ book.title }}</h5>
                                <p class="card-text text-muted mb-3">
                                    {% if book.authors|length > 0 %}
                                        {% for author in book.authors %}
                                            {{ author.name }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    {% else %}
                                        <em>Auteur non spécifié</em>
                                    {% endif %}
                                </p>
                                <div class="mt-auto">
                                    <a href="{{ path('app_book_show', {id: book.id}) }}" class="btn btn-outline-primary btn-sm">Voir les détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <h4>Aucun livre disponible</h4>
                <p>Le catalogue est vide pour le moment. <a href="{{ path('admin_book_new') }}">Ajoutez le premier livre</a> !</p>
            </div>
        {% endif %}
    </div>
{% endblock %} 